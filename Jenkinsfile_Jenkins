def gv_script
pipeline {
     agent any
    environment {
         GITHUB_URL = "https://github.com/prabhat-roy/particle41.git"
         BRANCH = "main"
    }
    stages {
        stage("Checkout from Git Repo") {
            steps {
                git branch: "${BRANCH}", url: "$GITHUB_URL"
            }
        }
        stage("Terraform Version") {
            steps {
                sh 'terraform --version'
            }
        }
        stage("Terraform Init") {
            steps {
                dir("Terraform/EKS") {
                    sh 'terraform init'
                }
            }
        }
        stage("Terraform Plan") {
            steps {
                dir("Terraform/EKS") {
                    sh 'terraform plan'
                }
            }
        }
    }
}
